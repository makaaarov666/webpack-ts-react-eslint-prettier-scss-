{
    "compilerOptions": {
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "outDir": "./build/",
      "rootDir": "./",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "src/*": [ "./src/*" ],
        "components/*": [ "./src/components/*" ],
        "hooks/*": ["./src/hooks/*"],
        "helpers/*": ["./src/helpers/*"],
        "store/*": ["./src/store/*"],
        "styles/*": [ "./src/styles/*" ],
      }
    },
    "exclude": [
      "./node_modules/**/*"
    ]
  }