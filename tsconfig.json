{
    "compilerOptions": {
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "src/*": [ "./src/*" ]
      }
    },
    "exclude": [
      "./node_modules/**/*"
    ]
  }